<%- include("partials/header") -%>

<main class="bobaFett mando">

    <div class="container">
        <div class="row d-flex justify-content-center align-items-center container-profile m-3">
            <div
                class="col-lg-4 col-md-4 col-sm-0  d-none d-sm-block p-0 container-profile-gauche d-flex justify-content-center align-items-center">
                <img src="../img/mountain.jpg" alt="photo du spot" style="max-width: 100%;">
            </div>
            <div
                class="col-lg-8 col-md-8 col-sm-12 p-0 container-profile-droite d-flex flex-column justify-content-between align-items-center">
                <h1 class="mt-3"><%= showSpot.name %></h1>
                <div
                    class="container-profile-description m-1 d-flex flex-column justify-content-center align-items-center">
                    <span>Description :</span>
                    <p class="p-3 d-flex flex-column justify-content-center align-items-center">
                        <%= showSpot.description %></p>
                </div>
                <div class="container-profile-contact m-1 p-2 d-flex flex-column justify-content-center align-items-center">
                    <p class="m-1"><span>Difficulté : </span><%= showSpot.difficulty %></p>
                    <p class="m-1"><span>Adresse : </span><%= showSpot.address %></p>
                    <p class="m-1"><span>Coordonnées : </span><%= showSpot.coordinates %></p>
                </div>
                <div class="container-profile-edition d-flex justify-content-center align-items-center">
                <p><span>Retourner vers le</span><button type="button"
                    class="btn btn-secondary rounded-circle m-3"><a href="/allspot"><img src="/img/spot.png" alt=""></a></button></p>
                </div>
            </div>
        </div>
    </div>

</main>

<%- include("partials/footer") -%>