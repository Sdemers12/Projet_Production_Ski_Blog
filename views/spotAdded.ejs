<%- include("partials/header") -%>
<main class="bobaFett mando">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center container-profile m-3">
            <div
                class="col-lg-4 col-md-4 col-sm-0  d-none d-sm-block p-0 container-profile-gauche d-flex justify-content-center align-items-center">

                <img src="img/mountain.jpg" alt="photo du spot" style="max-width: 100%;">

            </div>
            <div
                class="col-lg-8 col-md-8 col-sm-12 p-0 container-profile-droite d-flex flex-column justify-content-between align-items-center">

                <h3 class="mt-3">C'est fait !</h3>
                <h2>Ton spot est ajouté !</h2>
                <h1><%= data.name %></h1>
                <div
                    class="container-spot-valide m-3 d-flex flex-column justify-content-center align-items-center p-3">
                    <p class="m-1"><span>Nom : </span><%= data.name %> </p>
                    <p class="m-1"> <span>Description : </span><%= data.description %> </p>
                    <p class="m-1"><span>Adresse : </span><%= data.address %> </p>
                    <p class="m-1"><span>Niveau de difficulté : </span><%= data.difficulty %> </p>
                    <p class="m-1"><span>Coordonnées : </span>Longitude : <%= data.coordinates[0] %>, Latitude :
                        <%= data.coordinates[1] %></p>
                </div>
                <div class="container-profile-edition d-flex justify-content-center align-items-center">
                    <button type="button"
                            class="btn btn-secondary rounded-circle m-3"><a href="/allspot"><img src="/img/spot.png" alt=""></a></button>
                   <button type="button"
                            class="btn btn-secondary rounded-circle m-3"><a href="/spotform"><i class="bi bi-pencil"></i></a></button> 
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
</main>
<%- include("partials/footer") -%>